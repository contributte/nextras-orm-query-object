{
  "name": "contributte/nextras-orm-query-object",
  "description": "QueryObjects for Nextras ORM",
  "type": "library",
  "license": ["MIT"],
  "homepage": "https://github.com/contributte/nextras-orm-query-object",
  "authors": [
    {
      "name": "Milan Felix Å ulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">= 7.1",
    "nextras/dbal": "^3.0.0"
  },
  "require-dev": {
    "ninjify/qa": "^0.8.0",
    "ninjify/nunjuck": "^0.2.0",
    "nette/di": "~2.4.12",
    "nextras/orm": "^3.0.0",
    "mockery/mockery": "^1.1.0"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\Nextras\\Orm\\QueryObject\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Mocks\\": "tests/mocks"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tester": [
      "tester -s -p php --colors 1 -C tests/cases"
    ],
    "coverage": [
      "tester -s -p php --colors 1 -C -d extension=xdebug.so --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ],
    "phpstan-install": [
      "mkdir -p temp/phpstan",
      "composer require -d temp/phpstan phpstan/phpstan:0.9.2",
      "composer require -d temp/phpstan phpstan/phpstan-nette:0.9"
    ],
    "phpstan": [
      "temp/phpstan/vendor/bin/phpstan analyse -l max -c phpstan.neon src"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-develop": "0.2.x-dev"
    }
  }
}
